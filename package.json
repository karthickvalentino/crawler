{
  "name": "crawler-project",
  "version": "1.0.0",
  "description": "A sophisticated, asynchronous web crawling and search system.",
  "scripts": {
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:up:force": "docker-compose up -d --force-recreate",
    "db:up": "alembic upgrade head",
    "db:down": "alembic downgrade base",
    "db:new-migration": "alembic revision --autogenerate -m",
    "server:start": "cd backend && PYTHONPATH=. python app.py",
    "client:start": "cd frontend && npm run dev",
    "server:test": "pytest",
    "client:test": "cd frontend && npm run test",
    "client:e2e": "cd frontend && npm run cypress:run"
  },
  "author": "",
  "license": "ISC"
}
