# Crawler Configuration
CRAWLER_TYPE=scrapy  # Options: scrapy, selenium, api

# Flask Configuration
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=crawler_user
RABBITMQ_PASSWORD=crawler_pass
RABBITMQ_VHOST=crawler_vhost

# Scrapy specific settings (when CRAWLER_TYPE=scrapy)
SCRAPY_DOWNLOAD_DELAY=1
SCRAPY_CONCURRENT_REQUESTS=8
SCRAPY_OBEY_ROBOTS=True

# Selenium specific settings (when CRAWLER_TYPE=selenium)
SELENIUM_DRIVER_TYPE=chrome
SELENIUM_HEADLESS=True
SELENIUM_TIMEOUT=30

# API specific settings (when CRAWLER_TYPE=api)
API_RATE_LIMIT=1.0
API_TIMEOUT=30
